<h1>Add new FAQ</h1>

{{#if errors.length}}
    <p>Could not create a new question because:</p>
    <ul>
        {{#each errors}}
            <li>{{this}}</li>
        {{/each}}
    </ul>
{{/if}}

<form action="/FAQ/create" method="POST">
    <div>
        question: <input type="text" name="question" value="{{question}}">
    </div>
    <div>
        answer: <br>
        <textarea name="answer">{{answer}}</textarea>
    </div>
    <div>
        <input type="submit" value="Create">
    </div>
</form>